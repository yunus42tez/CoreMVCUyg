@page
@model ForgotPasswordModel
@{
	ViewData["Title"] = "Forgot your password?";
}
<div class="navbar navbar-expand-lg navbar-light navbar-static">
	<div class="navbar-brand ml-2 ml-lg-0">
		<a href="index.html" class="d-inline-block">
			<img src="~/full/assets/images/logo_light.png" alt="">
		</a>
	</div>

	<div class="d-flex justify-content-end align-items-center ml-auto">
		<ul class="navbar-nav flex-row">
			<li class="nav-item">
				<a href="#" class="navbar-nav-link">
					<i class="icon-lifebuoy"></i>
					<span class="d-none d-lg-inline-block ml-2">Yardım</span>
				</a>
			</li>
			<li class="nav-item">
				<a href="#" class="navbar-nav-link">
					<i class="icon-user-plus"></i>
					<span class="d-none d-lg-inline-block ml-2">Yeni Kayıt</span>
				</a>
			</li>
			<li class="nav-item">
				<a href="#" class="navbar-nav-link">
					<i class="icon-user-lock"></i>
					<span class="d-none d-lg-inline-block ml-2">Giriş</span>
				</a>
			</li>
		</ul>
	</div>
</div>
<!-- /main navbar -->
<!-- Page content -->
<div class="page-content">

	<!-- Main content -->
	<div class="content-wrapper">

		<!-- Inner content -->
		<div class="content-inner">

			<!-- Content area -->
			<div class="content d-flex justify-content-center align-items-center">

				<!-- Login form -->
				<form class="login-form" method="post">
					<div class="card mb-0">
						<div class="card-body">
							<div class="text-center mb-3">
								<i class="icon-reading icon-2x text-secondary border-secondary-100 border-3 rounded-pill p-3 mb-3 mt-1"></i>
								<h5 class="mb-0">Şifremi Unuttum</h5>
								
							</div>

							<div class="form-group form-group-feedback form-group-feedback-left">
								<input asp-for="Input.Email" type="text" class="form-control" placeholder="Email">
								<div class="form-control-feedback">
									<i class="icon-user text-muted"></i>
								</div>
								<span asp-validation-for="Input.Email" class="text-danger"></span>
							</div>

							
							<div class="form-group">
								<button type="submit" class="btn btn-primary btn-block">Gönder</button>
							</div>



							
						</div>
					</div>
				</form>
				<!-- /login form -->

			</div>
			<!-- /content area -->
			<!-- Footer -->
			<div class="navbar navbar-expand-lg navbar-light">
				<div class="text-center d-lg-none w-100">
					<button type="button" class="navbar-toggler dropdown-toggle" data-toggle="collapse" data-target="#navbar-footer">
						<i class="icon-unfold mr-2"></i>
						Footer
					</button>
				</div>

				<div class="navbar-collapse collapse" id="navbar-footer">
					<span class="navbar-text">
						&copy; 2022 - 2023. <a href="#">Smartpro Bilgisayar Akademisi.</a> <a href="" target="_blank">303-ERP Sınıfı. Tüm Hakları Gizlidir.</a>
					</span>


				</div>
			</div>
			<!-- /footer -->

		</div>
		<!-- /inner content -->

	</div>
	<!-- /main content -->

</div>
<!-- /page content -->
@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}